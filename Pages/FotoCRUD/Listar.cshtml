@page
@model teste.Pages.FotoCRUD.ListarModel

@{
    ViewData["Title"] = "Listagem de Fotos";
    Layout = "_Template";
}


<header class="container p-3">
    <div class="row align-items-center">
        <div class="col-sm-6"><h1>@ViewData["Title"]</h1></div>
        <div class="col-sm-6 text-right"><a asp-page="Incluir" class="btn btn-info">Nova Foto</a></div>
    </div>
</header>

<main class="container">
    @if (Model.Fotos.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Fotos[0].UrlFoto)</th>
                    <th>@Html.DisplayNameFor(m => m.Fotos[0].FotoImagem)</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Fotos)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => m.Fotos[0].UrlFoto)</td>
                        <td>@Html.DisplayFor(m => m.Fotos[0].FotoImagem)</td>
                        <td class="text-center">
                            <a class="btn btn-primary btn-sm" asp-page="./Alterar" asp-route-id="@item.IdFoto">Alterar</a>
                            <form class="d-inline-block" asp-page-handler="delete" asp-route-id="@item.IdFoto" method="post">
                                <button class="btn btn-danger btn-sm" onclick="confirmarExclusao(this);" type="button">Excluir</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <h2>Não há fotos baixadas...</h2>
    }
</main>
