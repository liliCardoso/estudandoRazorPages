@page
@model teste.Pages.MomentoCRUD.IndexModel

@{
    ViewData["Title"] = "Momentos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create">Novo Momento</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Momento[0].Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Momento[0].Data)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Momento) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.IdMomento">Alterar</a> |
                <a asp-page="./Details" asp-route-id="@item.IdMomento">Descrição Completa</a> |
                <a asp-page="./Delete" asp-route-id="@item.IdMomento">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
