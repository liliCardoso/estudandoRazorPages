@page
@model teste.Pages.MomentoCRUD.EditModel

@{
    ViewData["Title"] = "Alterar Momento";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Momento.IdMomento" />
            <div class="form-group">
                <label asp-for="Momento.Descricao" class="control-label"></label>
                <input asp-for="Momento.Descricao" class="form-control" />
                <span asp-validation-for="Momento.Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Momento.Data" class="control-label"></label>
                <input asp-for="Momento.Data" class="form-control" />
                <span asp-validation-for="Momento.Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
